@page "{id:int}"
@model AnnualLeaveRequestToolRazorPages.Pages.AnnualLeaveRequest.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Annual Leave Request</h1>

@if (Model == null || Model.AnnualLeaveRequestDeleteViewModel.AnnualLeaveRequest == null || !Model.AnnualLeaveRequestDeleteViewModel.IsDeletable || Model.AnnualLeaveRequestDeleteViewModel.AnnualLeaveRequest.AnnualLeaveRequestID == 0)
{
    <div style="color:red;">
        <ul>
            <li>Cannot delete this Annual Leave Request</li>
        </ul>
    </div>

    <div class="form-actions no-color esh-link-list" style="padding-top: 20px">
       @Html.ActionLink("Back to Overview", "Overview", new { selectedYear = @Model.AnnualLeaveRequestDeleteViewModel.Year }) 
    </div>

    return;
}

<h3>Are you sure you want to delete this annual leave request?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Start Date
        </dt>

        <dd class="col-sm-10">
            @Model.AnnualLeaveRequestDeleteViewModel.AnnualLeaveRequest.StartDate.ToString("dd-MMM-yyyy")
        </dd>

        <dt class="col-sm-2">
            Return Date
        </dt>

        <dd class="col-sm-10">
            @Model.AnnualLeaveRequestDeleteViewModel.AnnualLeaveRequest.ReturnDate.ToString("dd-MMM-yyyy")
        </dd>

        <dt class="col-sm-2">
            Number of Days Requested
        </dt>

        <dd class="col-sm-10">
            @Model.AnnualLeaveRequestDeleteViewModel.AnnualLeaveRequest.NumberOfDaysRequested
        </dd>

        <dt class="col-sm-2">
            Number of Annual Leave Days Requested
        </dt>

        <dd class="col-sm-10">
            @Model.AnnualLeaveRequestDeleteViewModel.AnnualLeaveRequest.NumberOfAnnualLeaveDaysRequested
        </dd>

        <dt class="col-sm-2">
            Number of Public Leave Days Requested
        </dt>

        <dd class="col-sm-10">
            @Model.AnnualLeaveRequestDeleteViewModel.AnnualLeaveRequest.NumberOfPublicLeaveDaysRequested
        </dd>

        <dt class="col-sm-2">
            Paid Leave Type
        </dt>

        <dd class="col-sm-10">
            @Model.AnnualLeaveRequestDeleteViewModel.AnnualLeaveRequest.PaidLeaveType
        </dd>

        <dt class="col-sm-2">
            Leave Type
        </dt>

        <dd class="col-sm-10">
            @Model.AnnualLeaveRequestDeleteViewModel.AnnualLeaveRequest.LeaveType
        </dd>

        <dt class="col-sm-2">
            Notes
        </dt>

        <dd class="col-sm-10">
            @Model.AnnualLeaveRequestDeleteViewModel.AnnualLeaveRequest.Notes
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="AnnualLeaveRequestDeleteViewModel.AnnualLeaveRequestID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="Overview" asp-route-id="@Model.AnnualLeaveRequestDeleteViewModel.Year">Back to Overview</a> 
    </form>
</div>