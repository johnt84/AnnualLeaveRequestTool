@model AnnualLeaveRequestToolMVC.Models.AnnualLeaveRequestOverviewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Annual Leave Request</h1>

<h3>Are you sure you want to delete this annual leave request?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            Start Date
        </dt>

        <dd class="col-sm-10">
            @Model.StartDate.ToString("dd-MMM-yyyy")
        </dd>

        <dt class="col-sm-2">
            Return Date
        </dt>

        <dd class="col-sm-10">
            @Model.ReturnDate.ToString("dd-MMM-yyyy")
        </dd>

        <dt class="col-sm-2">
            Number of Days Requested
        </dt>

        <dd class="col-sm-10">
            @Model.NumberOfDaysRequested
        </dd>

        <dt class="col-sm-2">
            Number of Annual Leave Days Requested
        </dt>

        <dd class="col-sm-10">
            @Model.NumberOfAnnualLeaveDaysRequested
        </dd>

        <dt class="col-sm-2">
            Number of Public Leave Days Requested
        </dt>

        <dd class="col-sm-10">
            @Model.NumberOfPublicLeaveDaysRequested
        </dd>

        <dt class="col-sm-2">
            Paid Leave Type
        </dt>

        <dd class="col-sm-10">
            @Model.PaidLeaveType
        </dd>

        <dt class="col-sm-2">
            Leave Type
        </dt>

        <dd class="col-sm-10">
            @Model.LeaveType
        </dd>

        <dt class="col-sm-2">
            Notes
        </dt>

        <dd class="col-sm-10">
            @Model.Notes
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="AnnualLeaveRequestID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Overview">Back to Overview</a>
    </form>
</div>
<div>
    @Html.ActionLink("Back to Overview", "Overview", new { selectedYear = @Model.Year }) 
</div>
